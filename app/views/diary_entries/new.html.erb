<% provide(:title, "New Diary Entry") %>

<%#= javascript_include_tag "Bolus_Rechner"%>


           
            <h1 class="text-center">My Diabetes Diary</h1>
  
      
        
            <h2 class="text-center heading-bolus">New Diary Entry</h2>
             <h4 class="text-center text-muted" id="Uhrzeit"></h4>
          
     
    
    

      <div class="container">
  <%= form_tag(diary_entry_path, remote:true) do %>
    <div class="form-group row top buffer">
    
      <label for="be" class="offset-sm-4 col-sm-2 col-form-label text-left">eaten Carbohydrates (in BU)</label>
      <div class="col-sm-2">
        <input type="number" min="0" class="form-control" id="be" name="diary_entry[carbohydrates]">
      </div>
    </div>
    <div class="form-group row">
      <label for="faktor" class="offset-sm-4 col-sm-2 col-form-label">BU Factor</label>
      <div class="col-sm-2">
        <input type="number" min="0" class="form-control" id="faktor" name="faktor" value="">
        </div>
      
    </div>
    <div class="form-group row">
      <label for="bloodsugar" class="offset-sm-4 col-sm-2 col-form-label">Bloodsugar(mg/dl)</label>
      <div class="col-sm-2">
        <input type="number" min="1" class="form-control" id="bloodsugar" name="diary_entry[bloodsugar]" value="">
        </div>
    </div>
    
       <div class="row top-buffer">
      <div class="offset-sm-4 col-sm-4 lead bg-primary">
            
               Meal Bolus (U): <strong id="mealinsulin"></strong>
            
      </div>
      </div>
     <div class="row top-buffer">
      <div class="offset-sm-4 col-sm-4 lead bg-danger">
            
               Correction Bolus (U):<strong id="corrinsulin"></strong>
            
      </div>
      </div>
      <div class="form-group row top-buffer">
      <label for="adInsulin" class="offset-sm-4 col-sm-2 col-form-label font-weight-bold bg-dark text-light">Adjust Insulin(U)</label>
      <div class="col-sm-2">
        <input type="number" class="form-control font-weight-bold bg-dark text-light" id="adInsulin" stepname="adInsulin" value="0">
        </div>
      </div>
      <div class="row top-buffer"> 
      <div class="offset-sm-4 col-sm-4 lead bg-warning">
            
              You have to inject <strong id="insulin"></strong> U Insulin in total
          
            
      </div>
      </div>
      <div class= "offset-sm-4 col-sm2 ">
        <textarea placeholder= "Add a comment" name = "diary_entry[comment]" id="comment" ></textarea>
      </div>
      <div class="row">
      <div class= "offset-sm-4 col-sm2 ">
        <button type="button" class="btn btn-primary btn-md" onclick="insulinBerechnen()">Calculate Insulin</button>
      </div>
      <input type="hidden"class="form-control" id="insulinTodb" name="diary_entry[insulin]" value="">
      <div class= "col-sm2 ">
        <button type="submit" name="commit" class="btn btn-success btn-md">Save to my Diary</button>
      </div>
      </div>
      </div>
      </div>
<% end%>
  
  
 




  